{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	// Configuração para garantir que o TypeScript processe apenas os ficheiros corretos
	"include": ["src/**/*"],
	"exclude": [
		"node_modules/*",
		".svelte-kit/*",
		"build/*",
		"./postcss.config.cjs",
		"./svelte.config.js",
		"./tailwind.config.cjs",
		"./vite.config.ts"
	]
}

